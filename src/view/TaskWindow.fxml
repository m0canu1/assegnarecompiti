<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>
<?import java.net.URL?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="controller.TaskWindowController"
      prefHeight="400.0" prefWidth="400.0"
      alignment="CENTER">
    <stylesheets>
        <URL value="@design.css"/>
    </stylesheets>
    <Label text="Compito: " styleClass="description-section"/>
    <TextField fx:id="task" styleClass="tasktitle"/>
    <Label styleClass="separator"/>
    <Label text="Cuoco assegnato:" styleClass="description-section"/>
    <TextField fx:id="cook" styleClass="taskcook"/>
    <Label styleClass="separator"/>
 <!--   <HBox alignment="CENTER"> -->
    <Label text="Inizio: " styleClass="description-section"/>
    <TextField fx:id="start" styleClass="header-section"/>
 <!--       <Label styleClass="hsep"></Label> -->
    <Label text="Fine:" styleClass="description-section"/>
    <TextField fx:id="end" styleClass="header-section"/>
<!--    </HBox> -->
    <Label styleClass="separator"/>
    <Label text="Tempo stimato (in ore):" styleClass="description-section"/>
    <TextField fx:id="estTime" styleClass="description-section" alignment="CENTER"/>
    <Label styleClass="separator"/>
    <Label text="Porzioni:" styleClass="description-section"/>
    <TextField fx:id="doses" styleClass="description-section" alignment="CENTER"/>
    <Label styleClass="separator"/>
    <Button fx:id="back" text="BACK"/>
</VBox>
